<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ManageSys.mapper.DepartmentMapper">

    <select id="selectAll" resultType="com.ManageSys.entity.Department">
        select * from department
    </select>

    <insert id="insert" parameterType="com.ManageSys.entity.Department">
        insert into `department` (name)
        values (#{name})
    </insert>

    <update id="updateById" parameterType="com.ManageSys.entity.Department">
        update `department` set name = #{name}
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from `department` where id = #{id}
    </delete>

</mapper>